<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.ramzan.dicegainz.ui.main.MainViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/defaultPadding">

            <Button
                android:id="@+id/rollAllButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.liftsLoaded}"
                android:onClick="@{() -> viewModel.rollAll()}"
                android:text="@string/roll_all" />


            <TextView
                android:id="@+id/lift_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/lift_1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filter_container_1"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="@dimen/defaultPadding">

                <AutoCompleteTextView
                    android:id="@+id/filter_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/filter"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/roll_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.liftsLoaded}"
                android:onClick="@{() -> viewModel.roll(1)}"
                android:text="@string/roll" />

            <TextView
                android:id="@+id/lift_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.lift1Text}" />

            <TextView
                android:id="@+id/lift_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/lift_2" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filter_container_2"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="@dimen/defaultPadding">

                <AutoCompleteTextView
                    android:id="@+id/filter_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/filter"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/roll_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:enabled="@{viewModel.liftsLoaded}"
                android:onClick="@{() -> viewModel.roll(2)}"
                android:text="@string/roll" />

            <TextView
                android:id="@+id/lift_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.lift2Text}" />

            <TextView
                android:id="@+id/lift_3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/lift_3" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filter_container_3"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="@dimen/defaultPadding">

                <AutoCompleteTextView
                    android:id="@+id/filter_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/filter"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/roll_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.roll(3)}"
                android:text="@string/roll" />

            <TextView
                android:id="@+id/lift_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.lift3Text}" />

        </LinearLayout>
    </ScrollView>
</layout>